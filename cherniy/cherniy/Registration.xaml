<Window x:Class="cherniy.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cherniy"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="boxes">
            <Setter Property="TextBox.Margin" Value="5"/>
            <Setter Property="TextBox.Width" Value="600"/>
            <Setter Property="TextBox.Height" Value="20"/>
        </Style>
        <Style x:Key="buttons">
            <Setter Property="Button.Width" Value="200"/>
            <Setter Property="Button.Height" Value="20"/>
            <Setter Property="Button.Margin" Value="10 5 10 0"/>
        </Style>
    </Window.Resources>
    <Grid>
        <WrapPanel Orientation="Vertical" HorizontalAlignment="Center">
            <Label Content="Регистрация" FontSize="48px"></Label>
            <WrapPanel Orientation="Vertical">
                <Label FontSize ="14px" Content="Имя"/>
                <TextBox x:Name="name" Style ="{StaticResource boxes}"></TextBox>
            </WrapPanel>
            <WrapPanel Orientation="Vertical">
                <Label FontSize ="14px" Content="Фамилия"/>
                <TextBox x:Name="secondName" Style ="{StaticResource boxes}"></TextBox>
            </WrapPanel>
            <WrapPanel Orientation="Vertical">
                <Label FontSize ="14px" Content="Почта"/>
                <TextBox x:Name="email" Style ="{StaticResource boxes}"></TextBox>
            </WrapPanel>
            <WrapPanel Orientation="Vertical">
                <Label FontSize ="14px" Content="Пароль"/>
                <TextBox x:Name="password" Style ="{StaticResource boxes}"></TextBox>
            </WrapPanel>
            <WrapPanel  Orientation="Vertical">
                <Label FontSize ="14px" Content="Подтвердите пароль"/>
                <TextBox x:Name="passconfirm" Style ="{StaticResource boxes}"></TextBox>
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button Content="Уже есть аккаунт" Style="{StaticResource buttons}" Click="Button_Click"/>
                <Button Content="Готово" Style="{StaticResource buttons}" Click="Button_Click_1"/>

          </WrapPanel>
        </WrapPanel>
    </Grid>
</Window>
